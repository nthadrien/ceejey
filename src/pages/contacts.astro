---
import Header from "@components/headers/Headers.astro";
import LastFooter from "@components/footers/LastFooter.astro";
import Layout from "@layouts/ELayout.astro";
import BreadCrumb from "@components/headers/BreadCrumb.astro";

const headerInfo = {
	description : "We will get to you as soon as possible",
	title: "Contact Us",
	keywords:[],
};

const link = Astro.url
---


<Layout {...headerInfo}>

	<BreadCrumb />

	<Header title={headerInfo.title} description={headerInfo.description} />

    <section style="max-width: 968px;" class="container row g-2 align-items-center mx-auto p-2">

		<p>We are Open and online:</p>
		<p class="col-12 my-3 text-pacifico">Monday - Friday 7am-7pm EST</p>

		<div class="box col-sm-6 col-md-4 ps-3 border-start">
			<h5 class="text-pacifico">Email Us</h5>
			<p class="small">info@my-domain.com <br/> suppport@my-domain.com</p>
		</div>
		

		<div class="box col-sm-6 col-md-4 ps-3">
			<h5 class="text-pacifico">Call Us</h5>
			<p class="small">
				(123) 456-7890 <br/> 
				(123) 456-7890
			</p>
		</div>

		<div class="box col-md-4 ps-3">
			<h5 class="text-pacifico">Address</h5>
			<small class="small">
				San Francisco |  500 Terry Francine Street,8790
			</small>
		</div>

		<p class="lead col-12"> Or you could reach to us directly : </p>
		

		<form class="col-12">

			<div class="form-floating mb-3">
				<input type="email" class="form-control" id="floatingInput" placeholder="name@example.com">
				<label for="floatingInput">Email address</label>
			</div>

			<div class="form-floating mb-3">
				<input type="text" class="form-control" id="floatingInput" placeholder="name please">
				<label for="floatingTextarea">Name</label>
			</div>

			<textarea rows="5" class="form-control mb-3" placeholder="Leave a message here" id="floatingTextarea"></textarea>

			<button type="submit" class="btn btn-primary">
				<i class="bi bi-send-check-fill me-3"></i> Send
			</button>


		</form>
        
    </section>


</Layout>

<style>
	.box {
		position: relative;
		border-left: 1px solid lightgray;
	}

	.box::after {
		content: "";
		position: absolute;
		left: -1%;
		top: 0px;
		background-color: purple;
		height: 30%;
		width: 1.6%;
	}
</style>