const socalLinks: { class: string; link: string }[] = [
    { class: "facebook", link: "#facebook" },
    { class: "whatsapp", link: "#facebook" },
    { class: "telegram", link: "#facebook" },
];

const pages: { name:string , link:string}[] = [
    { name:"about" , link:"/about/"},
    { name:"shop" , link:"/products/"},
    { name:"Services" , link:"/about#services"},
    { name:"blog",link:"/blog"}
];

const categories: string[] = [
    "Eye Makeup",
    "Lip Makeup",
    "Face Makeup",
    "Skincare",
    "Haircare",
];

