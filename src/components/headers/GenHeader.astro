---
interface Props {
    title: string;
    description?: string|number;
}

const { title, description } = Astro.props;
---

<header style="min-height: max(30vh,320px);" class="nav flex-column justify-content-center align-items-center text-center">

    <h1 class="text-swanky">{title}</h1>
    <p class="small text-black-50">{description}</p>

</header>