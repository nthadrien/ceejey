---
interface Props {
    title: string;
    description?: string;
}

const { title, description ="" } = Astro.props;
---

<header class="main-header nav flex-column justify-content-center align-items-start text-center">
    
    <section class="container-sm text-white">
        <h1 class="fw-bold text-swanky text-shadow">{title}</h1>
        <p class="small">{description}</p>
    </section>
    <slot/>
</header>